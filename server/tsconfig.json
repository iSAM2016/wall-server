{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": ".", // 可以相对这个目录 import 文件
    "paths": {
      "@entity": ["src/entity"],
      "@utils": ["src/utils"],
      "@core": ["src/core"],
    }
  },
  "exclude": ["node_modules", "dist"]
}