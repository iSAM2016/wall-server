{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": ".", // 可以相对这个目录 import 文件
    "paths": {
      "@entity": ["src/entity"],
      "@commands/config": ["commands/config"],
      "@commands/utils": ["commands/utils"],
      "@commands/shard": ["commands/shard"],
      "@commands/core": ["commands/core"],
      "@commands/interface": ["commands/utils/interface"],
      "@commands/service": ["commands/feature/service"],
      "@commands/annotation": ["commands/utils/annotation"]
    }
  },
  "exclude": ["node_modules", "dist"]
}