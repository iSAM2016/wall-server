{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": ".", // 可以相对这个目录 import 文件
    "paths": {
      "@app/entity": ["src/entity"],
      "@commands": ["commands/"],
      "@annotation": ["commands/annotation"]
    }
  },
  "exclude": ["node_modules", "dist"]
}