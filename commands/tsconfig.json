{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": false,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "dist/",
    "lib": ["es6"],
    "baseUrl": ".", // 可以相对这个目录 import 文件
    "paths": {
      "*": ["*", "core/*"]
    }
  },
  "exclude": ["node_modules/", "dist/"]
}
